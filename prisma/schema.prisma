// Prisma schema for the Fabrication Table, Users, and Orders

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Model for Fabrication Table and accessories
model Product {
  id           String   @id @default(cuid())
  name         String
  priceInCents Int
  description  String
  imageURL     String
  available    Boolean
  inventory    Int
  soldOut      Boolean
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  Order        Order[]
}

model Item {
  name String
  href String 
  price Int
  description String
  imageSrc String
  imageAlt String
  breadcrumbs: [
    { id: 1, name: "fabrication", href: "#" },
    { id: 1, name: "table", href: "#" },
  ],
  sizes: [
    { name: "Pre-Fabricated", description: "We weld the table for you."},
    { name: "Kit", description: "You recive a kit and and assembly instuctions"},
  ]
}

// Model for Users 
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Order {
  id           String   @id @default(cuid())
  totalInCents Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  userId    String
  productId String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id], onDelete: Restrict)
}
